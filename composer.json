{
    "name": "comicreliefinc/campaign_lts",
    "description": "Comic Relief's LTS campaign distribution",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 0,
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "git@github.com:comicrelief/behat-tools.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@campaign:scaffold",
            "@grunt:dependencies"
        ],
        "post-update-cmd": [
            "@campaign:scaffold",
            "@grunt:dependencies"
        ],
        "grunt:dependencies": [
            "cd web/profiles/contrib/cr/themes/custom/campaign_base;yarn cache clean;yarn install"
        ],
        "campaign:links": "cd web/profiles/contrib/cr;ln -sf ../../../../config .;ln -fs ../../../../modules .;ln -fs ../../../../tests .;ln -fs ../../../../themes .;ln -fs ../../../../cr.in* .",
        "campaign:scaffold": [
            "mkdir -p web/profiles/contrib/cr",
            "@campaign:links",
            "cp ci/platform/settings.php web/sites/default/settings.php"
        ],
        "grunt:build": "cd web/profiles/contrib/cr/themes/custom/campaign_base;yarn build",
        "drupal:install": [
            "cd web;drush si -v cr --account-pass='admin' install_configure_form.enable_update_status_module=NULL install_configure_form.enable_update_status_emails=NULL -y"
        ],
        "campaign:install": [
            "@drupal:install",
            "cd web;drush en -y cr_default_content cr_rest_api"
        ],
        "campaign:build": [
            "@composer install",
            "@grunt:build",
            "@campaign:scaffold",
            "@campaign:install"
        ],
        "code:check": [
            "vendor/bin/phpcs --config-set installed_paths vendor/drupal/coder/coder_sniffer",
            "vendor/bin/phpcs --standard=Drupal --encoding=utf-8 --colors -n modules tests",
            "vendor/bin/phpcpd modules tests"
        ],
        "code:fix": [
            "vendor/bin/phpcbf --standard=Drupal --encoding=utf-8 -n modules tests"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "enable-patching": true,
        "mouf": {
            "nodejs": {
                "version": "12.20.1",
                "targetDir": "vendor/nodejs/nodejs",
                "forceLocal": false
            }
        },
        "patches": {
            "drupal/entity_browser": {
                "See https://www.drupal.org/project/entity_browser/issues/2845037#comment-13896765": "https://www.drupal.org/files/issues/2020-11-09/2845037_updates_for_2.patch"
            }
        }
    },
    "require": {
        "composer/installers": "2.0.0",
        "cweagans/composer-patches": "1.7.1",
        "drupal/core-composer-scaffold": "8.9.18",
        "drupal/core-project-message": "8.9.18",
        "drupal/core-recommended": "8.9.18",
        "drupal/admin_toolbar": "3.0.2",
        "drupal/advagg": "4.1",
        "drupal/better_exposed_filters": "5.0-beta3",
        "drupal/blazy": "1.0-rc6",
        "drupal/config_devel": "1.8",
        "drupal/config_split": "1.7",
        "drupal/crop": "1.5",
        "drupal/ctools": "3.7",
        "drupal/devel": "4.1.1",
        "drupal/diff": "1.0",
        "drupal/ds": "3.13",
        "drupal/editor_advanced_link": "1.9",
        "drupal/embed": "1.4",
        "drupal/entity": "1.2",
        "drupal/entity_browser": "2.6",
        "drupal/entity_embed": "1.1",
        "drupal/entity_reference_revisions": "1.9",
        "drupal/fast_404": "2.0-alpha5",
        "drupal/fastly": "3.14",
        "drupal/field_group": "3.2",
        "drupal/file_entity": "2.0-beta9",
        "drupal/focal_point": "1.5",
        "drupal/google_tag": "1.4",
        "drupal/imagemagick": "3.2",
        "drupal/inline_entity_form": "1.0-rc9",
        "drupal/media_entity": "1.8",
        "drupal/media_entity_browser": "1.0-beta3",
        "drupal/media_entity_image": "1.3",
        "drupal/media_entity_slideshow": "2.4",
        "drupal/menu_link_attributes": "1.2",
        "drupal/metatag": "1.16",
        "drupal/override_node_options": "2.6",
        "drupal/page_manager": "4.0-beta6",
        "drupal/paragraphs": "1.12",
        "drupal/pathauto": "1.8",
        "drupal/rabbitmq": "2.1",
        "drupal/raven": "3.2.4",
        "drupal/redirect": "1.6",
        "drupal/redis": "1.5",
        "drupal/rest_menu_tree": "2.0.0",
        "drupal/restui": "1.20",
        "drupal/scheduled_updates": "1.0-alpha7",
        "drupal/search_api": "1.20",
        "drupal/search_api_solr": "4.2.1",
        "drupal/simple_sitemap": "3.10",
        "drupal/social_links": "3.0.0",
        "drupal/token": "1.9",
        "drupal/twig_tweak": "2.9",
        "drupal/upgrade_status": "3.10",
        "drupal/video_embed_field": "2.4",
        "drupal/view_mode": "1.x-dev",
        "drupal/view_modes_display": "2.3",
        "drupal/view_unpublished": "1.0",
        "drupal/views_ajax_history": "1.6",
        "drush/drush": "9.7.3",
        "mouf/nodejs-installer": "^1.0.14",
        "php-amqplib/php-amqplib": "2.12.0",
        "platformsh/config-reader": "^2.3",
        "twig/twig": "1.42.5",
        "webflo/drupal-finder": "1.2.2",
        "webmozart/path-util": "2.3.0"
    },
    "require-dev": {
        "drupal/coder": "8.3.13",
        "drupal/core-dev": "8.9.18",
        "phpunit/phpunit": "7.5.20",
        "phpunit/php-timer": "2.1.3",
        "drupal/default_content": "2.0-alpha1",
        "drupal/drupal-extension": "4.1.0",
        "phpmd/phpmd": "2.10.2",
        "squizlabs/php_codesniffer": "3.6.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "BehatTests\\": "tests/behat/features/bootstrap"
        }
    }
}
